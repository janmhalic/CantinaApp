<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rev_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/rev_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rev_name"
        android:layout_marginBottom="10dp"
        android:text="date" />

    <TextView
        android:id="@+id/rev_content"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/rev_date"
        android:layout_marginBottom="10dp"
        android:text="Customer Review" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/rev_content"
        android:background="@color/gray" />

    <RatingBar
        android:id="@+id/ratings"
        style="?android:ratingBarStyle"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:backgroundTint="@color/gray"
        android:isIndicator="true"
        android:max="5"
        android:progressTint="@color/yellow"
        android:scaleX=".5"
        android:scaleY=".5"
        android:transformPivotX="220dp"
        android:transformPivotY="0dp" />

</RelativeLayout>