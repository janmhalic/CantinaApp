<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:background="@drawable/sells_back"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/box"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp">

            <ImageView
                android:id="@+id/sellsImage"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:background="@color/black" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/sells_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/box"
            android:text="product name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/sells_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sells_name"
            android:layout_toEndOf="@id/box"
            android:text="product description" />

        <TextView
            android:id="@+id/price_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sells_des"
            android:layout_toEndOf="@id/box"
            android:text="Price: " />

        <TextView
            android:id="@+id/sells_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sells_des"
            android:layout_toEndOf="@id/price_intro"
            android:text="000.00"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/stocks_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stocks: "
            android:layout_toStartOf="@id/sells_stocks"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:id="@+id/sells_stocks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="0" />

        <ImageButton
            android:id="@+id/sells_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:src="@drawable/ic_more"
            android:visibility="visible" />



    </RelativeLayout>



</androidx.cardview.widget.CardView>